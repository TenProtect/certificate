/* 底部提交按钮 */
.bottom-submit.data-v-cb69f009 {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 32rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.submit-btn.data-v-cb69f009 {
  height: 88rpx;
  background: linear-gradient(135deg, #6C5CE7, #A855F7);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}
.submit-btn.disabled.data-v-cb69f009 {
  background: #E0E0E0;
  opacity: 0.6;
}
.submit-btn.data-v-cb69f009:active:not(.disabled) {
  transform: scale(0.98);
}
.submit-text.data-v-cb69f009 {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}
.submit-btn.disabled .submit-text.data-v-cb69f009 {
