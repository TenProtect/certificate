/* 3步极速拍照 */
.photo-process.data-v-d60a3ea4 {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 32rpx;
  padding: 60rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(102, 126, 234, 0.15);
  position: relative;
  overflow: hidden;
}
.photo-process.data-v-d60a3ea4::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: shimmer-d60a3ea4 3s ease-in-out infinite;
}
@keyframes shimmer-d60a3ea4 {
0%, 100% { opacity: 0.3;
}
50% { opacity: 0.6;
}
}
.process-header.data-v-d60a3ea4 {
  text-align: center;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 2;
}
.process-title.data-v-d60a3ea4 {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.process-subtitle.data-v-d60a3ea4 {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
}
.process-steps.data-v-d60a3ea4 {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  position: relative;
  z-index: 2;
}
.step-wrapper.data-v-d60a3ea4 {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.step-item.data-v-d60a3ea4 {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  width: 100%;
}
.step-circle.data-v-d60a3ea4 {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}
.step-circle.active.data-v-d60a3ea4 {
  background: rgba(255, 255, 255, 0.9);
  border-color: rgba(255, 255, 255, 0.8);
  transform: scale(1.1);
  box-shadow: 0 12rpx 48rpx rgba(255, 255, 255, 0.2);
}
.step-circle.active.data-v-d60a3ea4::after {
  content: '';
  position: absolute;
  top: -6rpx;
  left: -6rpx;
  right: -6rpx;
  bottom: -6rpx;
  border-radius: 50%;
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1, #96ceb4);
  background-size: 400% 400%;
  animation: gradientShift-d60a3ea4 3s ease infinite;
  z-index: -1;
}
@keyframes gradientShift-d60a3ea4 {
0%, 100% { background-position: 0% 50%;
}
50% { background-position: 100% 50%;
}
}
.step-icon.data-v-d60a3ea4 {
  font-size: 32rpx;
  filter: grayscale(100%);
  transition: all 0.3s ease;
}
.step-circle.active .step-icon.data-v-d60a3ea4 {
  filter: grayscale(0%);
  transform: scale(1.1);
}
.step-connector.data-v-d60a3ea4 {
  position: absolute;
  top: 40rpx;
  right: -50%;
  width: 100%;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2rpx;
  overflow: hidden;
}
.step-connector.active.data-v-d60a3ea4 {
  background: rgba(255, 255, 255, 0.4);
}
.step-connector.active.data-v-d60a3ea4::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.8), transparent);
  animation: flow-d60a3ea4 2s ease-in-out infinite;
}
@keyframes flow-d60a3ea4 {
0% { left: -100%;
}
100% { left: 100%;
}
}
.step-wrapper:last-child .step-connector.data-v-d60a3ea4 {
  display: none;
}
.step-label.data-v-d60a3ea4 {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
  text-align: center;
  white-space: nowrap;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}
.step-desc.data-v-d60a3ea4 {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 300;
  text-align: center;
  white-space: nowrap;
}

