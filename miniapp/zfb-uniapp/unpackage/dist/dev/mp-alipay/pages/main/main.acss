
.main-container.data-v-4f50ca8f {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}
.page-content.data-v-4f50ca8f {
  position: relative;
  width: 100%;
  min-height: calc(100vh - 120rpx);
  padding-bottom: 120rpx;
}

/* 页面切换动画 */
.page-content > view.data-v-4f50ca8f {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height: 100%;
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  opacity: 0;
  transform: translateX(100%);
}
.page-content > view.page-active.data-v-4f50ca8f {
  opacity: 1;
  transform: translateX(0);
  position: relative;
}

/* 优化性能 */
.page-content > view.data-v-4f50ca8f:not(.page-active) {
  pointer-events: none;
}
.page-content > view.page-active.data-v-4f50ca8f {
  pointer-events: auto;
}
