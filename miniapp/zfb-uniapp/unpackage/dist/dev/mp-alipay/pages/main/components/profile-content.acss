
.profile-page.data-v-6ec24300 {
  background-color: #f5f5f5;
  min-height: 100%;
  box-sizing: border-box;
  padding-top: 80rpx;
}

/* 用户头部信息 */
.user-header.data-v-6ec24300 {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 20rpx 40rpx;
  /* background: white; */
  margin: 20rpx;
  border-radius: 20rpx;
  /* box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05); */
}
.user-avatar.data-v-6ec24300 {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.avatar-image.data-v-6ec24300 {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
}
.user-title.data-v-6ec24300 {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

/* 菜单列表 */
.menu-list.data-v-6ec24300 {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}
.menu-item.data-v-6ec24300 {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}
.menu-item.data-v-6ec24300:last-child {
  border-bottom: none;
}
.menu-item.data-v-6ec24300:active {
  background-color: #f8f9fa;
}
.menu-icon.data-v-6ec24300 {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon-circle.data-v-6ec24300 {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

/* 拍摄指引图标 */
.guide-icon .icon-circle.data-v-6ec24300 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}
.camera-icon.data-v-6ec24300 {
  position: relative;
  width: 32rpx;
  height: 24rpx;
}
.camera-body.data-v-6ec24300 {
  width: 100%;
  height: 18rpx;
  background: white;
  border-radius: 4rpx;
  position: relative;
}
.camera-lens.data-v-6ec24300 {
  position: absolute;
  top: 3rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 12rpx;
  height: 12rpx;
  background: #4facfe;
  border-radius: 50%;
  border: 2rpx solid white;
}

/* 下单须知图标 */
.notice-icon .icon-circle.data-v-6ec24300 {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}
.document-icon.data-v-6ec24300 {
  width: 24rpx;
  height: 30rpx;
  background: white;
  border-radius: 3rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 3rpx;
}
.doc-line.data-v-6ec24300 {
  width: 16rpx;
  height: 2rpx;
  background: #fa709a;
  border-radius: 1rpx;
}

/* 分享给好友图标 */
.share-icon .icon-circle.data-v-6ec24300 {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}
.share-icon-content.data-v-6ec24300 {
  position: relative;
  width: 30rpx;
  height: 30rpx;
}
.share-dot.data-v-6ec24300 {
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
}
.share-dot.data-v-6ec24300:first-child {
  top: 4rpx;
  left: 4rpx;
}
.share-dot-2.data-v-6ec24300 {
  bottom: 4rpx;
  left: 4rpx;
}
.share-dot-3.data-v-6ec24300 {
  top: 50%;
  right: 4rpx;
  transform: translateY(-50%);
}
.share-lines.data-v-6ec24300 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.share-line.data-v-6ec24300 {
  width: 12rpx;
  height: 1rpx;
  background: white;
  position: absolute;
}
.share-line-1.data-v-6ec24300 {
  top: -3rpx;
  transform: rotate(20deg);
}
.share-line-2.data-v-6ec24300 {
  top: 3rpx;
  transform: rotate(-20deg);
}
.menu-label.data-v-6ec24300 {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
.menu-arrow.data-v-6ec24300 {
  font-size: 32rpx;
  color: #ccc;
  font-weight: 300;
}
