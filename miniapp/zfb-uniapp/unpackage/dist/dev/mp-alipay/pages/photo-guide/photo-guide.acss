.navbar-left.data-v-8a3b14cf {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}
.back-icon.data-v-8a3b14cf {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}
.navbar-title.data-v-8a3b14cf {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.navbar-right.data-v-8a3b14cf {
  width: 60rpx;
}

/* 主体内容 */
.guide-content.data-v-8a3b14cf {
  padding: 40rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 步骤信息 */
.step-info.data-v-8a3b14cf {
  margin-top: 60rpx;
  text-align: center;
  color: white;
}
.step-number.data-v-8a3b14cf {
  font-size: 28rpx;
  font-weight: bold;
  color: #4F7CFF;
  background: rgba(255, 255, 255, 0.9);
  padding: 8rpx 24rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 24rpx;
}
.step-title.data-v-8a3b14cf {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  line-height: 1.4;
}
.step-description.data-v-8a3b14cf {
  font-size: 28rpx;
  opacity: 0.9;
  line-height: 1.5;
  max-width: 600rpx;
}

/* 底部按钮 */
.bottom-actions.data-v-8a3b14cf {
  width: calc(100vw - 64rpx);
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  -webkit-backdrop-filter: blur(10rpx);
          backdrop-filter: blur(10rpx);
}
.guide-btn.data-v-8a3b14cf {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4F7CFF 0%, #6366F1 100%);
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(79, 124, 255, 0.3);
}
.guide-btn.data-v-8a3b14cf:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(79, 124, 255, 0.3);
}
.skip-text.data-v-8a3b14cf {
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 16rpx;
}
.skip-text.data-v-8a3b14cf:active {
  opacity: 0.7;
}

/* 滚动组件容器调整 */
.data-v-8a3b14cf .scroll-banner-container {
  border-radius: 16rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}
.data-v-8a3b14cf .scroll-banner-indicators {
  bottom: 24rpx;
}
.data-v-8a3b14cf .indicator-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: rgba(255, 255, 255, 0.4);
}
.data-v-8a3b14cf .indicator-dot.active {
  background-color: rgba(255, 255, 255, 0.9);
  transform: scale(1.3);
}
